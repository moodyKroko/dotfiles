[user]
	name = "moodyKroko"
	email = "59341541+moodyKroko@users.noreply.github.com"
[core]
  editor=
	excludesfile = ~/.gitignore_global
	autocrlf = input
  filemode = false
  pager = less -FRSX
[rerere]
  enabled = true
  autoupdate = true
[push]
  default = simple
[color]
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  grep = auto
  ui = auto
  pager = true
  filemode = false
[alias]
  d = diff
  co = checkout
  ci = commit
  ca = commit -a
  ps = "!git push origin $(git rev-parse --abbrev-ref HEAD)"
  pl = "!git pull origin $(git rev-parse --abbrev-ref HEAD)"
  st = status
  br = branch
  ba = branch -a
  bm = branch --merged
  bn = branch --no-merged
  hist = log --pretty=format:\"%Cgreen%h %Creset%cd %Cblue[%cn] %Creset%s%C(yellow)%d%C(reset)\" --graph --date=relative --decorate --all
  llog = log --graph --name-status --pretty=format:\"%C(red)%h %C(reset)(%cd) %C(green)%an %Creset%s %C(yellow)%d%Creset\" --date=relative
  open = "!hub browse"
  type = cat-file -t
  dump = cat-file -p
[submodule]
	recurse = true
	fetchJobs = 0
[rebase]
	autoStash = true
[diff]
  tool = nvimdiff
[difftool "nvimdiff"]
  prompt = false
	cmd = nvim -d \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool]
  prompt = false
  keepBackup = false
[mergetool "nvimdiff"]
	cmd = nvim -d \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[init]
  defaultBranch = main
[github]
  user = moodyKroko
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
