export XDG_CONFIG_HOME=$HOME/.config
export XDG_CURRENT_DESKTOP=GNOME

export PATH="/opt/nvim/:$HOME/.local/bin/scripts:$PATH"

# make nvim default
VIM="nvim"

# helpful alias
alias vim="nvim"
alias edit='nvim'
alias zconf="nvim ~/.zshrc"
alias zpconf="nvim ~/.zsh_profile"
alias dot='chezmoi'
alias i3c='nvim ~/.config/i3/config'
alias muxc='nvim ~/.config/tmux/tmux.conf'
alias picomc='nvim ~/.config/picom/picom.conf'
alias polyc='nvim ~/.config/polybar/config.ini'
alias kittyc='nvim ~/.config/kitty/kitty.conf'
alias vimc='nvim ~/.config/nvim/lua/plugins/ui.lua'

alias wific='nmtui' # loads terminal ui for wifi dashboard
alias soz='source ~/.zshrc' # source .zshrc
alias root='sudo -i' # tune sudo and su
alias lopack='pacman -Qdtq' # list orphaned packages
alias rmopack='sudo pacman -Rs $(pacman -Qdtq)' # remove orphaned packages
alias ycp='yay -Sc' # clean yay packages
alias ylp='yay -Ps' # list installed packages in yay
alias ssh='kitten ssh '

# some more ls aliases
alias l='ls -lF'
alias ll='ls -alF'
alias la='ls -A'
alias rm='rm -I --preserve-root'

alias md='mkdir -pv' # create parent directory on demand

# with confirmation
alias mv='mv -i'
alias cp='cp -i'
alias ln='ln -i'

alias cpv='rsync -ah --info=progress2' # copy with progress bar

alias bsconf='nvim ~/.bashrc' # make nvim default

# shows all the path
alias path='echo -e ${PATH//:/\\n}'
alias now='date +"%"'
alias nowtime=now

# alias echopl='echo $PATH | tr : \\n'

ZSH_AUTOSUGGEST_STRATEGY=(history completion)
bindkey '^ ' autosuggest-accept

# Go
export GOPATH=$HOME/go
export PATH=/usr/local/go/bin:$GOPATH/bin:~/.local/bin:~/Scripts:$PATH
